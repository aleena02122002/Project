<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"
            android:text="Setting"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/toolbar"
            app:layout_constraintHorizontal_bias="0.106"
            app:layout_constraintStart_toStartOf="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/my_account"/>
        <TextView
            android:id="@+id/myAccount"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:gravity="center|start"
            android:text="My Account"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/forward_arrow"/>
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#5C5C5C"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/alert_phone"/>
        <TextView
            android:id="@+id/vibration"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:text="Vibration with  Alert"
            android:gravity="center|start"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <ToggleButton
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/white"
            android:layout_marginRight="8dp"/>
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#5C5C5C"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/notifications"/>
        <TextView
            android:id="@+id/notification"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:text="Notification"
            android:layout_marginLeft="5dp"
            android:gravity="center|start"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <ToggleButton
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/white"
            android:layout_marginRight="8dp"/>
    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#5C5C5C"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/phone_call"/>
        <TextView
            android:id="@+id/default_call"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:gravity="center|start"
            android:text="Set Default Phone Number \n for Call one of them"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="48dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="55dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white" />
    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#5C5C5C"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/about"/>
        <TextView
            android:id="@+id/aboutArmour"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:gravity="center|start"
            android:text="About Armour"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/forward_arrow"/>
    </LinearLayout>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#5C5C5C"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/logout"/>
        <TextView
            android:id="@+id/logOut"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:gravity="center|start"
            android:text="LogOut"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </LinearLayout>


</LinearLayout>